            border: 1px solid #ddd;
            border-radius: 15px;
            color: #666;
            cursor: pointer;
            margin-top: 10px;
        }

        .helpful-btn:hover {
            background-color: #f5f5f5;
        }

        @media (max-width: 768px) {
            .product-detail {
                grid-template-columns: 1fr;
            }

            .main-image {
                cursor: default;
            }

            .main-image img {
                transform: none !important;
            }
        }
