<div class="main-container">
    <section class="shop-page container">
        <div class="shop-topbar">
            <div class="search-bar">
                <form action="/search" method="POST" class="search-form" id="searchForm">
                    <input type="text" name="query" placeholder="Search items..." class="search-input" value="<%= searchQuery || '' %>" />
                    <input type="hidden" name="sort" value="<%= selectedSort || 'default' %>">
                    <button type="submit" class="search-button">Search</button>
                </form>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="shop__product__option__right">
                    <p>Sort by :</p>
                    <select id="priceSort" onchange="sortProducts(this.value)">
                        <option value="default" <%= selectedSort === 'default' ? 'selected' : '' %>>Default</option>
                        <option value="low" <%= selectedSort === 'low' ? 'selected' : '' %>>Low To High</option>
                        <option value="high" <%= selectedSort === 'high' ? 'selected' : '' %>>High To Low</option>
                        <option value="az" <%= selectedSort === 'az' ? 'selected' : '' %>>Name: A to Z</option>
                        <option value="za" <%= selectedSort === 'za' ? 'selected' : '' %>>Name: Z to A</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="product-list-container">
            <aside class="sidebar">
                <div class="filter-section">
                    <div class="filter-title">Categories</div>
                    <div class="category-brand-container">
                        <ul>
                            <% for (let i = 0; i < category.length; i++) { %>
                                <li>
                                    <a href="/filter?category=<%= category[i]._id %>"
                                       class="<%= selectedCategory && selectedCategory.toString() === category[i]._id.toString() ? 'active-category' : '' %>">
                                        <%= category[i].name %>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                        
                        
                    </div>
                </div>

                <div class="price-filter">
                    <div class="filter-title">Filter by Price</div>
                    <form id="price-filter-form">
                        <div class="price-options">
                            <a href="/filterPrice?gt=0&lt=500"><button type="button" class="price-button">Under â‚¹500</button></a>
                            <a href="/filterPrice?gt=500&lt=1000"><button type="button" class="price-button">â‚¹500 - â‚¹1000</button></a>
                            <a href="/filterPrice?gt=1000&lt=1500"><button type="button" class="price-button">â‚¹1000- â‚¹1500</button></a>
                            <a href="/filterPrice?gt=1500&lt=1000000"><button type="button" class="price-button">Above â‚¹1500</button></a>
                        </div>
                    </form>
                </div>
            </aside>

            <main class="product-grid">
                <% if (products.length === 0) { %>
                    <div class="no-products-container">
                        <div class="no-products-content">
                            <i class="fas fa-box-open no-products-icon"></i>
                            <h3>No Products Found</h3>
                            <p>
                                <% if (searchQuery) { %>
                                    We couldn't find any products matching "<%= searchQuery %>".
                                <% } else if (selectedCategory) { %>
                                    No products available in this category at the moment.
                                <% } else if (priceRange) { %>
                                    No products available in the selected price range.
                                <% } else { %>
                                    No products available at the moment.
                                <% } %>
                            </p>
                            <div class="no-products-suggestions">
                                <p>You might want to:</p>
                                <ul>
                                    <li>Try different search terms</li>
                                    <li>Check out other categories</li>
                                    <li>Remove price filters</li>
                                </ul>
                            </div>
                            <a href="/shop" class="reset-filters-btn">Clear All Filters</a>
                        </div>
                    </div>
                <% } %>            
                <%for(let i=0;i<products.length;i++){%>
                    <div class="product-card">
                        <button class="wishlist-btn" onclick="addToWishlist('<%=products[i]._id%>')">
                            <i class="fas fa-heart"></i>
                        </button>
                        <div class="product-img-wrap">
                            <a href="/productDetails/<%=products[i]._id%>">
                                <img class="product-img" 
                                     src="/uploads/product-images/<%=products[i].productImage[0]%>" 
                                     alt="<%=products[i].productName%>"
                                     onerror="this.src='/path-to-placeholder-image.jpg'">
                            </a>
                        </div>
                        <div class="product-details">
                            <h3 class="product-name"><%=products[i].productName%></h3>
                            <div class="product-price">
                                <span class="current-price">â‚¹<%=products[i].salePrice.toLocaleString('en-IN')%></span>
                                <span class="original-price">â‚¹<%=products[i].regularPrice.toLocaleString('en-IN')%></span>
                            </div>
                           
                                <div class="product-offer" style="color: green; font-size: 15px">
                                     <%=products[i].totalOffer%>% Offer
                                </div>
                                <div class="product-delivery" style="color: rgb(82, 82, 82); font-size: 12px;">
                                    Free Delivery
                                </div>
                        </div>
                    </div>
                <%}%>
            </main>
        </div>

        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>&sort=<%= selectedSort %>">Prev</a>
            <% } %>
        
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a class="<%= currentPage === i ? 'active' : '' %>" 
                   href="?page=<%= i %>&sort=<%= selectedSort %>">
                   <%= i %>
                </a>
            <% } %>
        
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>&sort=<%= selectedSort %>">Next</a>
            <% } %>
        </div>
    </section>
</div>

    </section>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script>


function addToWishlist(productId){
 
  fetch("/addToWishlist",{
    method:"post",
    headers:{
      "Content-Type":"application/json"
    },
    body:JSON.stringify({productId:productId})
  })
  .then((response)=>response.json())
  .then((data)=>{
     if(data.status){
      Swal.fire({
        title:'Added to wishlist',
        text:'The product has been added to your wishlist',
        icon:'success',
        timer:2000
      })
     }else{
      Swal.fire({
        title:'Already in wishlist',
        text:data.message,
        icon:'info',
        timer:2000,
      })
     }
  })
  .catch((error)=>{
     Swal.fire({
      title:'Error',
      text:'There was an error adding the product to your wishlist ',
      icon:'error',
      timer:2000
     })
  })
}

function sortProducts(value) {
    let currentUrl = new URL(window.location.href);
    const searchQuery = '<%= searchQuery %>';

    if (searchQuery) {
        const form = document.getElementById('searchForm');
        const sortInput = form.querySelector('input[name="sort"]');
        sortInput.value = value;
        form.submit();
    } else {
        currentUrl.searchParams.set('sort', value);
        window.location.href = currentUrl.toString();
    }

}
</script>
