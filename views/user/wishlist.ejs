 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .breadcrumb-wrap {
            background-color: #e9ecef;
            padding: 15px 0;
        }

        .breadcrumb a {
            color: #1b1b1c;
            text-decoration: none;
        }

        .breadcrumb span {
            margin: 0 5px;
            color: #6c757d;
        }

        .table {
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .table th {
            background-color: #343a40;
            color: #fff;
            padding: 12px;
        }

        .table td {
            padding: 12px;
            vertical-align: middle;
        }

        .product-thumbnail img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
        }

        .product-name a {
            color: #000;
            text-decoration: none;
            font-weight: bold;
        }

        .product-name a:hover {
            text-decoration: underline;
        }

        .btn {
            font-size: 0.9rem;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .btn-sm {
            font-size: 0.85rem;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .lead {
            color: #6c757d;
        }

        .main {
            padding: 20px 0;
        }

        .action .btn {
            color: #dc3545;
            border: 1px solid #dc3545;
            background: #fff;
        }

        .action .btn:hover {
            background-color: #dc3545;
            color: #fff;
        }

        .text-center .btn {
            color: #28a745;
            border: 1px solid #28a745;
            background: #fff;
        }

        .text-center .btn:hover {
            background-color: #28a745;
            color: #fff;
        }

        .page-header {
            margin-bottom: 20px;
            background-color: #f1f1f1;
        }

        .swal2-popup {
            font-family: Arial, sans-serif !important;
        }
    </style>
    <%- include("../../views/partials/user/header") %>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span><a href="/" rel="nofollow">Shop</a></span> 
                    <span><a href="/" rel="nofollow">My Wishlist</a></span> 
                </div>
            </div>
        </div>

        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Add to Cart</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (wishlist.length > 0) { %>
                                        <% for (let product of wishlist) { %>
                                            <tr>
                                                <td class="image product-thumbnail">
                                                    <img src="/uploads/product-images/<%= product.productImage[0] %>" alt="Product Image" />
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name">
                                                        <a href=""> <%= product.productName %> </a>
                                                    </h5>
                                                    <p class="font-xs"> <%= product.category.name %> </p>
                                                </td>
                                                <td class="price" data-title="Price">â‚¹<span> <%= product.salePrice %> </span></td>
                                                <td class="text-center" data-title="Add to Cart">
                                                    <a href="#" onclick="" class="btn btn-sm">Add to Cart</a>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <a class="btn btn-sm" href="#" onclick="confirmRemove('<%= product._id %>')">
                                                        <i class="fi-rs-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">
                                                <p class="lead mb-4">No items found in Wishlist</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmRemove(productId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/removeFromWishlist?productId=${productId}`;
                }
            });
        }
    </script>
    <%- include("../../views/partials/user/footer") %>

