<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
     body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
}

.breadcrumb-wrap {
    background-color: #e9ecef;
    padding: 15px 0;
}

.breadcrumb a {
    color: #1b1b1c;
    text-decoration: none;
}

.breadcrumb span {
    margin: 0 5px;
    color: #6c757d;
}

.table {
    margin-top: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.table th {
    background-color: #f8f8f8; 
    color: #343a40; 
    padding: 12px;
    text-align: center; 
}

.table td {
    padding: 12px;
    vertical-align: middle;
}

.product-thumbnail img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 5px;
}

.product-name a {
    color: #000;
    text-decoration: none;
    font-weight: bold;
}

.product-name a:hover {
    text-decoration: underline;
}

.btn {
    font-size: 0.9rem;
    padding: 5px 10px;
    border-radius: 5px;
}

.btn-sm {
    font-size: 0.85rem;
}

.btn:hover {
    opacity: 0.9;
}

.lead {
    color: #6c757d;
}

.main {
    padding: 20px 0;
}

.action .btn {
    color: #dc3545;
    border: 1px solid #dc3545;
    background: #fff;
}

.action .btn:hover {
    background-color: #dc3545;
    color: #fff;
}

.text-center .btn {
    color: #28a745;
    border: 1px solid #28a745;
    background: #fff;
}

.text-center .btn:hover {
    background-color: #28a745;
    color: #fff;
}

.page-header {
    margin-bottom: 20px;
    background-color: #f1f1f1;
}

.swal2-popup {
    font-family: Arial, sans-serif !important;
}

.wishlist-container {
    max-width: 900px;
    margin: auto;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.wishlist-table {
    width: 100%;
    border-collapse: collapse;
}

.wishlist-table th, .wishlist-table td {
    padding: 12px;
    border-bottom: 1px solid #ddd;
    text-align: center;
}

.wishlist-table th {
    background-color: #f8f8f8;
    font-weight: bold;
}

.wishlist-table td.text-start {
    text-align: left;
}

.wishlist-table img {
    width: 60px;
    height: auto;
    border-radius: 5px;
}

.size-select {
    padding: 1px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 100%; 
    max-width: 120px; 
    margin: 0 auto;
    display: block;
    position: relative; 
}
.select-wrapper {
    position: relative;
    display: inline-block;
}

.size-select option {
    padding: 8px;
    background-color: white;
}

.dropup .size-select {
    position: relative;
}

.table-responsive {
    overflow-y: visible !important;
    overflow-x: auto;
}

.shopping-summery {
    overflow: visible !important;
}

.shopping-summery tbody tr:last-child td {
    padding-bottom: 20px;
}
.btn-action {
    padding: 8px 12px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    font-size: 14px;
}

.btn-cart {
    background-color: #28a745;
    color: white;
}

.btn-cart:hover {
    background-color: #218838;
}

.btn-remove {
    background-color: #dc3545;
    color: white;
}

.btn-remove:hover {
    background-color: #c82333;
}

.empty-wishlist {
    text-align: center;
    padding: 20px;
    font-size: 1.2rem;
}

.notification {
    display: none;
    position: fixed;
    bottom: 20px;
    right: 20px;
    background-color: #28a745;
    color: white;
    padding: 15px;
    border-radius: 5px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    z-index: 1000;
}

.notification-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.close-notification {
    background: none;
    border: none;
    color: white;
    font-size: 20px;
    cursor: pointer;
}


@media screen and (min-width: 768px) {
    tr:nth-last-child(-n+2) .select-wrapper {
        position: relative;
    }
    
    tr:nth-last-child(-n+2) .size-select {
        position: relative;
    }
    
    tr:nth-last-child(-n+2) .select-wrapper select {
        transform-origin: bottom;
    }
}
    </style>
</head>
<body>
    <%- include("../../views/partials/user/header") %>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span><a href="/shop" rel="nofollow">Shop</a></span> 
                    <span><a href="/wishlist" rel="nofollow">My Wishlist</a></span> 
                </div>
            </div>
        </div>
        
        <div id="notification" class="notification" role="alert">
            <div class="notification-content">
                <span id="notification-message"></span>
                <button onclick="hideNotification()" class="close-notification" aria-label="Close notification">×</button>
            </div>
        </div>

        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Size</th>
                                        <th scope="col">Add to Cart</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (wishlist && wishlist.length > 0) { %>
                                        <% for (let item of wishlist) { %>
                                            <tr>
             
                                                <td class="image product-thumbnail">
                                                    <img src="/uploads/product-images/<%= item.productId.productImage[0] %>" alt="Product Image" />
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name">
                                                        <a href="/productDetails/<%= item.productId._id %>"> <%=item.productId.productName %> </a>
                                                    </h5>
                                                    <p class="font-xs">                                                     
                                                        <%= item.productId.category.name %>                                      
                                                    </p>
                                                </td>
                                                <td class="price" data-title="Price">₹<span> <%= item.productId.salePrice %> </span></td>
                                                <td>
                                                    <div class="select-wrapper">
                                                        <select name="size" id="size-<%= item.productId._id %>" class="size-select">
                                                            <option value="">Select Size</option>
                                                            <% if (item.productId.sizeVariants && Array.isArray(item.productId.sizeVariants)) { %>
                                                                <% item.productId.sizeVariants.forEach(variant => { %>
                                                                    <% if (variant && variant.quantity > 0) { %>
                                                                        <option value="<%= variant.size %>"><%= variant.size %></option>
                                                                    <% } %>
                                                                <% }); %>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </td>
                                                <td class="text-center" data-title="Add to Cart">
                                                    <button onclick="addToCartFromWishlist('<%= item.productId._id %>')" class="btn-action btn-cart">
                                                        <i class="fas fa-shopping-cart"></i> Add to Cart
                                                    </button>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <button onclick="confirmRemove('<%= item.productId._id %>')" class="btn-action btn-remove">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="empty-wishlist">
                                                <i class="fas fa-heart" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                                                <p>Your wishlist is empty</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function addToCartFromWishlist(productId) {
            const sizeSelect = document.getElementById(`size-${productId}`);
            const selectedSize = sizeSelect.value;

            if (!selectedSize) {
                showNotification('Please select a size');
                return;
            }

            fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    size: selectedSize,
                    quantity: 1
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.status) {
                    showNotification('Product added to cart successfully!');
                } else {
                    showNotification(data.message || 'Error adding product to cart');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error adding product to cart');
            });
        }

        function confirmRemove(productId) {
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to remove this item from your wishlist?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes, remove it!",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/removeFromWishlist?productId=${productId}`;
                }
            });
        }

        function showNotification(message) {
            const notification = document.getElementById('notification');
            const messageElement = document.getElementById('notification-message');

            messageElement.textContent = message;
            notification.style.display = 'block';

            setTimeout(() => {
                hideNotification();
            }, 3000);
        }

        function hideNotification() {
            const notification = document.getElementById('notification');
            notification.style.display = 'none';
        }
    </script>
    <%- include("../../views/partials/user/footer") %>
</body>
</html>